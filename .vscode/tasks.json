{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "d",
            "type": "shell",
            "command": "haxe",
            "args": [
                "build.hxml",
                "-debug",
                "-lib",
                "hxcpp-debug-server"
            ],
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ]
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "cp",
            "isBackground": false,  // Changed to false
            "args": [
                "${workspaceFolder}/bin/KontentumNC-debug",
                "${workspaceFolder}"
            ],
            "presentation": {
                "echo": true,  // Changed to true
                "reveal": "always",  // Changed to always
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "d"
            ],
            "problemMatcher": []
        },
        {
            "label": "r",
            "type": "shell",
            "command": "haxe",
            "args": [
                "build.hxml"
            ],
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ]
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "cp",
            "isBackground": false,  // Changed to false
            "args": [
                "${workspaceFolder}/bin/KontentumNC",
                "${workspaceFolder}"
            ],
            "presentation": {
                "echo": true,  // Changed to true
                "reveal": "always",  // Changed to always
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build",
            "dependsOn": [
                "r"
            ],
            "problemMatcher": []
        }
    ]
}